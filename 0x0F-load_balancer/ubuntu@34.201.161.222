#!/usr/bin/env bash
# Configure HAProxy to distribute traffic to web-01 and web-02 using round-robin algorithm.

if ! [ -x "$(command -v haproxy)" ]; then
    sudo apt-get update -y
     sudo apt-get install haproxy -y
fi

cat <<EOF > /etc/haproxy/haproxy.cfg
global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server 272659-web-01 54.144.158.246:80 check
    server 272659-web-02 52.3.242.30:80 check
EOF

sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy
sudo service haproxy restart
