#!/usr/bin/env bash
# Update package list and install nginx

# shellcheck disable=SC2154
sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get install -y nginx
sudo service nginx start

sudo mkdir -p /etc/nginx/html
sudo touch /etc/nginx/html/index.html
sudo chown -R "$USER":"$USER" /etc/nginx/html
sudo chmod -R 755 /etc/nginx/html
sudo chown -R "$USER":"$USER" /etc/nginx/sites-enabled
sudo chmod -R 755 /etc/nginx/sites-enabled
sudo echo 'Hello World!' > /etc/nginx/html/index.html
sudo echo 'Hello World!' > /etc/nginx/html/index.html
sudo touch /etc/nginx/html/404.html
sudo echo "Ceci n'est pas une page" > /etc/nginx/html/404.html
sudo echo "server {
	listen 80 default_server;
	listen [::]:80 default_server;
	root /var/www/html;
	index index.html index.htm index.nginx-debian.html;
	server_name _;
	add_header X-Served-By \$hostname;

	location /redirect_me {
		return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
	}

	location / {
		try_files \$uri \$uri/ =404;
	}

	error_page 404 /404.html;
	location = /404.html {
		root /var/www/html;
		internal;
	}
}" | sudo tee /etc/nginx/sites-enabled/default

sudo service nginx restart
